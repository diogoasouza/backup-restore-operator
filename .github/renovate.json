{
  "extends": [
    "github>rancher/renovate-config#release",
    "group:allNonMajor"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 20,
  "baseBranches": [
    "main",
    "release/v7.x"
  ],
  "ignoreDeps": [
    "github.com/rancher/hull",
    "github.com/rancher/lasso",
    "github.com/rancher/wrangler",
    "github.com/rancher/wrangler/v2",
    "github.com/rancher/wrangler/v3",
    "github.com/imdario/mergo"
  ],
  "packageRules": [
    {
      "matchBaseBranches": ["main", "release/v7.x"],
      "matchDatasources": ["golang-version"],
      "matchManagers": ["gomod"],
      "matchPackageNames": [
        "golang",
        "go"
      ],
      "allowedVersions": "<1.24.0",
      "groupName": "Go and Kubernetes Updates"
    },
    {
      "matchBaseBranches": ["main", "release/v7.x"],
      "matchManagers": ["gomod"],
      "matchPackageNames": ["k8s.io/**"],
      "allowedVersions": "<1.33.0",
      "groupName": "Go and Kubernetes Updates"
    }
  ]
}
